            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/wh_interesting"
            android:background="@drawable/w_icon_heart" 
            android:layout_marginRight="5dp"
            android:textSize="12.0sp" />

        <TextView
            android:id="@id/wh_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wh_interestinglabel"
            android:text="4ä¸ª"
