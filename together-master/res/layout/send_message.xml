                    android:paddingRight="10dp"                    android:text="@string/event_place"                    android:textColor="@color/white"                    android:textSize="18dp" />                <EditText                    android:id="@+id/place_edit"                    android:layout_width="150dp"                    android:layout_height="wrap_content"                    android:inputType="textNoSuggestions"                    android:maxLength="16"                    android:paddingLeft="10dp" >                </EditText>            </LinearLayout>            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingLeft="10dp"                android:paddingTop="10dp" >                <TextView                    android:layout_width="90dp"                    android:layout_height="wrap_content"                    android:paddingRight="10dp"                    android:text="@string/event_time"                    android:textColor="@color/white"                    android:textSize="18dp" /> <!-- <EditText                    android:id="@+id/time_edit"                    android:layout_width="150dp"                    android:layout_height="wrap_content"                    android:inputType="textPassword"                    android:maxLength="16"                    android:paddingLeft="10dp" >                </EditText> -->                <TimePicker                    android:id="@+id/timePicker"                    android:layout_width="match_parent"                    android:layout_height="wrap_content" />            </LinearLayout>            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingBottom="10dp"                android:paddingLeft="10dp"                android:paddingTop="10dp" >                <TextView                    android:layout_width="90dp"                    android:layout_height="wrap_content"                    android:paddingRight="10dp"                    android:text="@string/event_type"                    android:textColor="@color/white"                    android:textSize="18dp" />                <Spinner                    android:id="@+id/event_spinner"                    android:layout_width="match_parent"                    android:layout_height="wrap_content" />            </LinearLayout>            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:paddingBottom="10dp"                android:paddingLeft="10dp"                android:paddingTop="10dp" >                <TextView                    android:layout_width="90dp"                    android:layout_height="wrap_content"                    android:paddingRight="10dp"                    android:text="@string/event_description"                    android:textColor="@color/white"                    android:textSize="18dp" />                <EditText                    android:id="@+id/my_event_edit"                    android:layout_width="150dp"                    android:layout_height="150dp"                    android:maxLength="16"                    android:paddingLeft="10dp" >                </EditText>            </LinearLayout>        </LinearLayout>    </LinearLayout></LinearLayout>
